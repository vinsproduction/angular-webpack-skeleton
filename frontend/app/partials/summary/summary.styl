
[ui-view="summary"]

	.summary
		
		margin 30px 0 0 0

		ul
			display flex
			flex-wrap wrap
			justify-content space-between
			// margin 0 -5px
			li
				flex-grow 1
				display flex
				justify-content center
				align-content center
				// margin 5px
				background #3d3d3d
				position relative
				height 380px
					
				&:before
					content ''
					left 0
					top 48px
					display block
					position absolute
					width 1px
					height 300px
					background rgba(33,33,33,0.4)
			
				.inner
					
					width 300px
					margin 50px 0
					text-align center
					position relative
					
					


					.title
						color #fff
						font-family "Calibri"
						font-size 20px
						font-weight bold
						text-transform uppercase
					
					.icon
						
						height 170px
						font-family "BebasNeueRegular"
						color #646464
						font-size 140px
						align-items center
						display inline-flex
						text-align center
						span
							font-size 94px
							position relative
							top 15px
						

					.caption
						borderbox()
						position relative
						text-align center
						color #818589
						font-family "Calibri"
						font-size 14px
						padding 0 10px
						&:before
							content ''
							left 0
							top 0
							display block
							position relative
							margin 0 auto
							width 70%
							height 1px 
							background #646464
							
						p
							&:first-child
								margin 20px 0 10px 0
							a
								color #57b7b3
								font-size 14px
